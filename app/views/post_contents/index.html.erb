<% if @search_word.nil? %>

<div class="container mt-4">
  <div class="row">
    <%= render "layouts/user_info", user: @user %>
    <div class="col-6 mt-3">
      <% @post_contents.each do |post_content| %>
      <div class="card mb-4">
        <h5 class="card-header"><%= post_content.title %></h5>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to user_path(post_content.user_id) do %>
              <%= attachment_image_tag post_content.user, :profile_image, format: "jpeg", size: "50x50", fallback: "no_image.jpg", class: "profile_image" %>
              <%= post_content.user.name %>
            <% end %>
            <div class="favorite-btn"><%= render "goods/good_btn", post_content: post_content %></div>
            <div class="comment"><i class="far fa-comment-alt"></i><%= post_content.comments.count %></div>
          </h5>
          <p class="card-text">
            <%= post_content.text %>
            <% if post_content.file.present? %>
              <audio src= "<%= "#{post_content.file}" %>" controls="">
                <a src="<%= "#{post_content.file}" %>">ダウンロード</a>
              </audio>
            <div class="tags">
              <%= render "layouts/tag_list", tag_list: post_content.tag_list %>
            </div>
            <% end %>
          </p>
          <%= link_to "詳細", post_content_path(post_content), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
    <%= render "layouts/sidebar", tag_list: @tags, all_ranks: @all_ranks %>
  </div>
</div>

<% else %>

<div class="container mt-4">
  <div class="row">
    <div class="col-6 mt-3">
      <h4>タグ検索:<%= params[:tag_name] %></h4>
