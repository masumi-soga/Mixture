<div class="container">
  <div class="row">
    <div class="form col-12 mt-3">
      <h3>Post</h3>
      <%= form_with model: @post_content, local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <p>Title</p>
        <%= f.text_field :title, size:"50x10" %>
      </div>
      <div class="form-group">
        <p>Text</p>
        <%= f.text_area :text, size:"50x10" %>
      </div>
      <div class="form-group">
        <p>Music File</p>
        <%= f.file_field :file, accept:"audio/*", :size => 140 %>
      </div>
      <div class="form-group">
        <p>Tags</p>
        <%= f.text_field :tag_list, value: @post_content.tag_list.join(','),placeholder: "複数の場合はカンマで区切ってください 例:Mixture,Rock", :size => 50 %>
      </div>
      <%= f.submit "投稿", class: "btn btn-mixture mb-3" %>
    <% end %>
    </div>
  </div>
</div>