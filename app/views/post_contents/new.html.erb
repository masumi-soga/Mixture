<div class="container">
  <div class="row">
    <h1>投稿</h1>
    <%= form_with model: @post_content, local: true do |f| %>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
    <%= f.label :text, "内容" %>
    <%= f.text_area :text %>
    <%= f.label :file, "音楽ファイル" %>
    <%= f.file_field :file, :size => 140 %>
    <%= f.submit "投稿" %>
    <% end %>
  </div>
</div>