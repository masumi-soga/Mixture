<div class="col-3 mt-3">
  <div class="card">
  <div class="card-body">
    <h5 class="card-title">タグ</h5>
    <p class="card-text">
      <% tag_list.each do |tag| %>
      <span class="badge badge-primary mr-1 p-2">
        <%= link_to "#{tag.name}(#{tag.taggings_count})", post_contents_path(tag_name: tag.name),class: "text-white" %>
      </span>
      <% end %>
    </p>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
  </div>

  <div class="card mt-4">
  <div class="card-body">
    <h5 class="card-title">ランキング</h5>
    <% all_ranks.each.with_index(1) do |post_content, i| %>
    <p class="card-text"><%= i %>.<%= post_content.title %></p>
    <% end %>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
  </div>

</div>