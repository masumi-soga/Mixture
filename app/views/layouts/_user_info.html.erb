<div class="col-3">
    <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= attachment_image_tag current_user, :profile_image, format: "jpeg", size: "50x50", fallback: "no_image.jpg", class: "profile_image" %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= current_user.name %></h6>
    <p class="card-text"><%= current_user.introduction %></p>
    <div class="link">
      <%= link_to "詳細", user_path(current_user) %>
    </div>

  </div>
</div>

</div>