<div class="container">
  <div class="row">
    <div class="form col-12 mt-3">
      <h3>Profile Edit</h3>
      <%= form_with model:@user, local: true do |f| %>
      <div class="profile_image_box">
        <p>Profile image</p>
        <%= attachment_image_tag @user, :profile_image, style: "height: 70px; width:70px;" ,fallback: 'no_image.jpg', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev'%>
    		<%= f.file_field :profile_image, class: 'img_field', style: 'display:none;' %>
        <br>
      </div>
      <div class="form-group mt-3">
        <p>Name</p>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <p>Introduction</p>
        <%= f.text_area :introduction %>
      </div>
  		<%= f.submit "Update", class: "btn btn-mixture" %>
  		<% end %>
    </div>
  </div>
</div>