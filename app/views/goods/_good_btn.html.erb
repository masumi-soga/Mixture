<% if post_content.gooded_by?(current_user) %>
  <%= link_to post_content.goods.count, post_content_goods_path(post_content), method: :delete, class: "fas fa-thumbs-up" %>
<% else %>
  <%= link_to post_content.goods.count, post_content_goods_path(post_content), method: :post, class: "fas fa-thumbs-up", style: "color: powderblue;" %>
<% end %>

